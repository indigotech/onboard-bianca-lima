generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  birthDate String
  addresses Address[]
}

model Address {
  id            Int    @id @default(autoincrement())
  cep           String
  street        String
  streetNumber  String
  complement    String?
  neighborhood  String
  city          String
  state         String
  userId        Int
  user          User   @relation(fields: [userId], references: [id])
}